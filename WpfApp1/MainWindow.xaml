<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        
        xmlns:wpfgl="clr-namespace:WPFGL;assembly=WPFGL"
        mc:Ignorable="d"
       Title="OpenGL in a Windows Forms Control" Height="300" Width="300" KeyDown="Window_KeyDown">
    <Grid>
        <WindowsFormsHost Margin="10,25,10,10">
            <wpfgl:WPFGLControl x:Name="ogl"/>
        </WindowsFormsHost>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,0,0,0"/>



    </Grid>
</Window>
